<!DOCTYPE html>
<html>
  
  <%- include('./partials/head.ejs', {titulo:'Detalle Menu'}) %>

  <body>

    <!-- Navbar (sit on top) -->
    
    <%- include('./partials/navbar.ejs') %>

    <!-- Header -->
   
    <%- include('./partials/header.ejs') %>

    <!-- Page content -->
    <div class="ps-content">

      <!-- Menu Section -->
      <div class="ps-row ps-padding-64" id="menu">
        <div class="ps-col l6 ps-padding-large">
          <h1 class="ps-center"> <%= recipe.title%> </h1>
          <br />
          <h4><%= recipe.description%></h4>
          <p class="ps-text-grey">
            U$S <%= recipe.price%>
          </p>
        </div>

        <div class="ps-col l6 ps-padding-large ps-img-menu">
          <img
            src="/images/menu.jpg"
            class="ps-round ps-image ps-opacity-min"
            alt="Menu"
          />
        </div>
      </div>

      <!-- Footer -->
      
      <%- include('./partials/footer.ejs') %>

      </footer>
    </div>
  </body>
</html>
